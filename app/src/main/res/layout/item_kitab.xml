<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_kitab"
        android:layout_width="180dp"
        android:layout_height="286dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:background="@drawable/bg_quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_kitab"
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:elevation="5dp"
        android:src="@drawable/kitab"
        app:layout_constraintEnd_toEndOf="@+id/v_kitab"
        app:layout_constraintStart_toStartOf="@+id/v_kitab"
        app:layout_constraintTop_toTopOf="@+id/v_kitab"
        app:shapeAppearanceOverlay="@style/roundimageview_kitab" />

    <TextView
        android:id="@+id/title_kitab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Lisanul Fata"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:elevation="5dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/v_kitab"
        app:layout_constraintEnd_toEndOf="@+id/img_kitab"
        app:layout_constraintStart_toStartOf="@+id/img_kitab"
        app:layout_constraintTop_toBottomOf="@+id/img_kitab" />

</androidx.constraintlayout.widget.ConstraintLayout>