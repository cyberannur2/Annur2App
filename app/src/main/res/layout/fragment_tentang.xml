<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tentang.TentangFragment">

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/tentang_aplikasi"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/v1"
        app:layout_constraintEnd_toEndOf="@+id/v1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1" />

    <TextView
        android:id="@+id/txt_desk_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/desk_apk"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_artikel_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desk_apk" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="@string/hubungi_kami"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

<!--    Instagram-->
    <View
        android:id="@+id/v_ig"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@drawable/bg_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:text="Instagram"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/v_ig"
        app:layout_constraintStart_toStartOf="@+id/v_ig"
        app:layout_constraintTop_toTopOf="@+id/v_ig" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_right"
        app:layout_constraintBottom_toBottomOf="@+id/v_ig"
        app:layout_constraintEnd_toEndOf="@+id/v_ig"
        app:layout_constraintTop_toTopOf="@+id/v_ig" />

    <!--    Youtube-->
    <View
        android:id="@+id/v_yt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@drawable/bg_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_ig" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:text="Youtube"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:elevation="5dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/v_yt"
        app:layout_constraintStart_toStartOf="@+id/v_yt"
        app:layout_constraintTop_toTopOf="@+id/v_yt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_right"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_yt"
        app:layout_constraintEnd_toEndOf="@+id/v_yt"
        app:layout_constraintTop_toTopOf="@+id/v_yt" />

    <!--    Tiktok-->
    <View
        android:id="@+id/v_tt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@drawable/bg_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_yt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:elevation="5dp"
        android:text="Tiktok"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/v_tt"
        app:layout_constraintStart_toStartOf="@+id/v_tt"
        app:layout_constraintTop_toTopOf="@+id/v_tt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:src="@drawable/ic_right"
        app:layout_constraintBottom_toBottomOf="@+id/v_tt"
        app:layout_constraintEnd_toEndOf="@+id/v_tt"
        app:layout_constraintTop_toTopOf="@+id/v_tt" />

    <!--    Website-->
    <View
        android:id="@+id/v_web"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@drawable/bg_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_tt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:text="Website"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:elevation="5dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/v_web"
        app:layout_constraintStart_toStartOf="@+id/v_web"
        app:layout_constraintTop_toTopOf="@+id/v_web" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_right"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_web"
        app:layout_constraintEnd_toEndOf="@+id/v_web"
        app:layout_constraintTop_toTopOf="@+id/v_web" />

    <!--    Kritik Saran-->
    <View
        android:id="@+id/v_wa"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@drawable/bg_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_web" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:text="Kritik dan Saran"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_wa"
        app:layout_constraintStart_toStartOf="@+id/v_wa"
        app:layout_constraintTop_toTopOf="@+id/v_wa" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_right"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_wa"
        app:layout_constraintEnd_toEndOf="@+id/v_wa"
        app:layout_constraintTop_toTopOf="@+id/v_wa" />

    <!--    Cek Update-->
    <View
        android:id="@+id/v_cek_update"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="64dp"
        android:elevation="4dp"
        android:background="@drawable/bg_view_cek_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_wa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Periksa Pembaruan"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_cek_update"
        app:layout_constraintEnd_toEndOf="@+id/v_cek_update"
        app:layout_constraintStart_toStartOf="@+id/v_cek_update"
        app:layout_constraintTop_toTopOf="@+id/v_cek_update" />




</androidx.constraintlayout.widget.ConstraintLayout>